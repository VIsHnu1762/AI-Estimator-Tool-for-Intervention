# Application Settings
APP_NAME="Road Safety Intervention Analysis System"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=False
SECRET_KEY="your-secret-key-here-change-in-production"

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=False

# Database Configuration
DATABASE_URL="postgresql://postgres:password@postgres:5432/road_safety_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL="redis://redis:6379/0"
REDIS_CACHE_TTL=86400

# AI/ML Models
TRANSFORMER_MODEL="sentence-transformers/all-MiniLM-L6-v2"
NER_MODEL="en_core_web_lg"
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"

# Vector Database
CHROMA_PERSIST_DIRECTORY="./data/chromadb"
VECTOR_COLLECTION_NAME="irc_standards"

# Government Data Sources
CPWD_SOR_API_URL="https://cpwd.gov.in/api/sor"
CPWD_AOR_API_URL="https://cpwd.gov.in/api/aor"
GEM_API_URL="https://gem.gov.in/api/v1"
GEM_API_KEY=""

# Document Processing
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS="pdf,docx,txt,png,jpg,jpeg"
TESSERACT_PATH="/usr/bin/tesseract"
TEMP_UPLOAD_DIR="./data/uploads"
PROCESSED_DIR="./data/processed"

# Report Generation
REPORT_OUTPUT_DIR="./data/reports"
REPORT_TEMPLATE_DIR="./templates/reports"
LOGO_PATH="./static/assets/emblem.svg"

# Security
CORS_ORIGINS="http://localhost:3000,https://yourdomain.gov.in"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=1440
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
